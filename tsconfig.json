{
    "compilerOptions": {
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "target": "ES2022",
        "sourceMap": true,
        "outDir": "dist",
        "resolveJsonModule": true,
        "allowImportingTsExtensions": true,
        "noEmit": true,
        "emitDeclarationOnly": false,
        "strict": true
    },
    "include": [
        "src/**/*"
    ],
}